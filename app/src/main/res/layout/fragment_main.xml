<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:layout_marginTop="@dimen/_30sdp"
        >
        <TextView
            android:id="@+id/text_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_fragment_instruction"
            android:padding="@dimen/_10sdp"
            />
        <TextView
            android:layout_below="@+id/text_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 1"
            android:id="@+id/txt_step_1"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"/>

        <RelativeLayout
            android:id="@+id/rel_enable"
            android:layout_below="@id/txt_step_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/border"
            android:paddingLeft="@dimen/_10sdp"
            >
            <ImageView
                android:id="@+id/img_enable"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_enable"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"/>
            <View
                android:layout_toRightOf="@+id/img_enable"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/border_color">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Keyboard"
                android:layout_toRightOf="@id/img_enable"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />
        </RelativeLayout>



        <TextView
            android:id="@+id/txt_step_2"
            android:layout_below="@id/rel_enable"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 2"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"/>
        <RelativeLayout
            android:id="@+id/rel_activate"
            android:layout_below="@id/txt_step_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/border"
            android:paddingLeft="@dimen/_10sdp"
            >
            <ImageView
                android:id="@+id/img_active"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_active"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"/>
            <View
                android:layout_toRightOf="@+id/img_active"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/border_color">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activate Keyboard"
                android:layout_toRightOf="@id/img_active"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>